<!DOCTYPE html>
<html>
<head>
  <title>Chanintr Box</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
  <%= stylesheet_link_tag    'vendor', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'layouts/fullwidth', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="content" class="animated fadeIn">
<header class="header">
  <%= render 'layouts/header' %>
</header>

<section class="content">
  <div id="main-container" class="container-fluid main-container">
      <div class="row">
        <div id="main-content" class="col-xs-12">
          <%= render 'layouts/flash' %>
          <%= yield %>
        </div>
      </div>
    </div>
</section>

<footer class="footer">
  <%= render 'layouts/footer' %>
</footer>
</div>
</body>


  