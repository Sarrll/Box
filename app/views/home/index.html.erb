<div id="welcome-bg" class="welcome-bg">
	<ul class="cb-slideshow">
        <li><span>Image 01</span></li>
        <li><span>Image 02</span></li>
        <li><span>Image 03</span></li>
        <li><span>Image 04</span></li>
        <li><span>Image 05</span></li>
        <li><span>Image 06</span></li>
    </ul>
</div>
<div class="welcome-content">
	<div class="row nomarg">
		<div class="col-xs-12 col-sm-12 col-md-push-4 col-md-8 nopad">
			<div class="text-center">
				<div class="tagline">
					<div class="vertical-center">
						<h1>Chanintr Box</h1>
						<span class="sep"></span>
						<h2 class="hidden-xs hidden-sm"><small>Good things happen when your stuff lives here</small></h2>
						<p><span class="cl-brand">Chanintr Box</span> keeps your files safe, synced, and easy to share.</p>
					</div>
				</div>
			</div>
		</div>
		<div class="col-xs-12 col-sm-12 col-md-pull-8 col-md-4 nopad">
			<div class="block text-center">
	            <%= render 'layouts/flash' %>
				<h2>Sign In</h2>
				<span class="sep sep-primary sep-block"></span>
				<%= form_for(
					resource, 
						as: resource_name, 
						url: session_path(resource_name), 
						:html => {:'data-type' => 'json'},
						remote: true
				) do |f| %>
				  <div class="form-group">
				    <%= f.label :email , :class => "sr-only" %>
				    <%= f.email_field :email, autofocus: true , :class => "form-control" , placeholder: "Email address" %>
				    <i class="input-icon fi-torso"></i>
				  </div>

				  <div class="form-group">
				    <%= f.label :password , :class => "sr-only" %>
				    <%= f.password_field :password, autocomplete: "off", :class => "form-control" , placeholder: "Password" %>
				    <i class="input-icon fi-key"></i>
				  </div>

				  <% if devise_mapping.rememberable? -%>
				    <div class="form-group text-left">
						<%= f.label :remember_me, :class => "checkbox" do %>
				      		<%= f.check_box :remember_me , checked: true  , :data => { :toggle => "checkbox" } %>
				      		Remember me
				      	<% end -%>
				    </div>
				  <% end -%>

				  <div class="actions form-group text-left">
				    <%= button_tag(type: 'submit', :class=> "btn btn-primary btn-block btn-lg") do %>
	                    Sign In
	                <% end %>
				  </div>
				<% end %>
				<span class="sep sep-primary sep-block"></span>
				<%= link_to "Forgot your password?", new_user_password_path %><br>
				<%= link_to "Register", new_user_registration_path %>
			</div>
		</div>
	</div>
</div>

<script>
	$(document).ready(function() {
		form_submission("#new_user");
	});
</script>


