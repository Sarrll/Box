<div class="text-center inner-content">

  <hgroup class="page-header text-center">
    <h3>Change your password</h3>
  </hgroup>
  <span class="sep sep-block"></span>

  <%= form_for(
    resource, 
      as: resource_name, 
      url: password_path(resource_name), 
      html: { 
        method: :put,
        :'data-type' => 'json',
        :'class' => 'form-horizontal new_user'
      },
      remote: true
    ) do |f| %>
    <%= f.hidden_field :reset_password_token %>
    <div class="form-group">
      <%= f.label :password, "New password", :class => "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.password_field :password, autofocus: true , autocomplete: "off", :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, "Confirm new password", :class => "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
      </div>
    </div>


    <div class="actions form-group text-left">
      <div class="col-sm-offset-3 col-sm-4 col-md-3">
        <%= button_tag(type: 'submit', :class=> "btn btn-primary btn-block btn-lg" ) do %>
          Change my password
        <% end %>
      </div>
    </div>

  <% end %>
  
  <span class="sep sep-block"></span>
  <div class="">
    <%= render "devise/shared/links" %>
  </div>
</div>

<script>
  $(document).ready(function() {
    form_submission("#new_user");
  });
</script>
